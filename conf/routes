# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
#Vista de la p√°gina inicial, por ahora no es necesaria?
#GET     /                           controllers.HomeController.index

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# UsuarioController

GET     /usuarios                   controllers.UsuarioController.getUsuarios
GET     /usuarios/:id               controllers.UsuarioController.getUsuario(id: Long)
PUT     /usuarios/:id               controllers.UsuarioController.updateUsuario(id: Long)
DELETE  /usuarios/:id               controllers.UsuarioController.deleteUsuario(id: Long)
POST    /campos/:id/usuarios        controllers.UsuarioController.createUsuario(id: Long)


#RegionController

GET     /regiones                   controllers.RegionController.getRegiones
GET     /regiones/:id               controllers.RegionController.getRegion(id: Long)
PUT     /regiones/:id               controllers.RegionController.updateRegion(id: Long)
DELETE  /regiones/:id               controllers.RegionController.deleteRegion(id: Long)
POST    /regiones                   controllers.RegionController.createRegion()

#CampoController

GET     /campos                   controllers.CampoController.getCampos(periodo: String ?="noVal")
GET     /campos/:id               controllers.CampoController.getCampo(id: Long, periodo: String ?="noVal")
PUT     /campos/:id               controllers.CampoController.updateCampo(id: Long)
DELETE  /campos/:id               controllers.CampoController.deleteCampo(id: Long)
POST    /regiones/:id/campos      controllers.CampoController.createCampo(id: Long)

#PozoController

GET     /pozos                   controllers.PozoController.getPozos(periodo:String ?= "noVal")
GET     /pozos/:id               controllers.PozoController.getPozo(id: Long, periodo:String ?= "noVal")
PUT     /pozos/:id               controllers.PozoController.updatePozo(id: Long)
DELETE  /pozos/:id               controllers.PozoController.deletePozo(id: Long)
POST    /campos/:id/pozos        controllers.PozoController.createPozo(id: Long)

#SensorController

GET     /sensores                controllers.SensorController.getSensores
GET     /sensores/:id            controllers.SensorController.getSensor(id: Long)
GET     /mediciones              controllers.SensorController.getMedidas
GET     /sensores/:id/mediciones controllers.SensorController.getMedidasSensor(id: Long)
PUT     /sensores/:id            controllers.SensorController.updateSensor(id: Long)
PUT     /sensores/mediciones/:id controllers.SensorController.updateMedicion(id: Long)
DELETE  /sensores/:id            controllers.SensorController.deleteSensor(id: Long)
DELETE  /sensores/mediciones/:id controllers.SensorController.deleteMedida(id: Long)
POST    /campos/:id/sensores                controllers.SensorController.createSensor
POST    /sensores/:id/mediciones controllers.SensorController.addMedida(id: Long)


#EmergenciaController

POST     /sensores/:id/emergencia   controllers.EmergenciaController.addEmergencia(id: Long)